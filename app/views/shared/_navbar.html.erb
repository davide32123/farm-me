<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "icon.png" %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to "All Baskets", baskets_path, class: "nav-link mt-1"  %>
    </li>
  </ul>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <% if user_signed_in? %>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "New Basket", new_basket_path, class: "nav-link"  %>
    </li>
  </ul>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <%= image_tag "avatar.jpg", width: 100, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Page", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
    <% else %>
    <li class="nav-item">
      <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Sign in", user_session_path, class: "nav-link" %>
    </li>
    <% end %>
  </ul>
</div>
</div>



